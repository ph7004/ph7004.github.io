.slider {
    margin: 40px auto;
    
    
}
    
img:after { 
        color: #fff;
        display: block;
        padding: 20px;
        border-radius: 6px;
        width: 100%;
        border: 3px pink solid;
        content: "ТЕКСТ";
    }


.flex_slider {
    display: flex;
    flex-flow: row nowrap;
    margin: 50px auto;
    justify-content: center;
    
    // max-width: 1000px
    // width: 80%
}
 
.slider_game {
    margin: 0 10px;
    align-self: center;
    
    transition: all 0.4s ease;
}
  

.slider_game_logo {
    position: relative;
    top: -83px;
    right: -37px;
    
}
 

.game_div {
    display: flex;
    margin-right: 20px;
    
    width: 92px;
}



